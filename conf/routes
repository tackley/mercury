# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /                           controllers.Application.home

GET     /health-check               controllers.Application.healthcheck
GET     /management/manifest        controllers.Application.manifest

GET     /:loc                       controllers.Application.today(loc: lib.ScannedLocation)
GET     /:loc/yesterday             controllers.Application.yesterday(loc: lib.ScannedLocation)
GET     /:loc/:year/:month/:day     controllers.Application.day(loc: lib.ScannedLocation, year: Int, month: Int, day: Int)

GET     /:loc/slide/:year/:month/:day   controllers.Application.slide(loc: lib.ScannedLocation, year: Int, month: Int, day: Int)


